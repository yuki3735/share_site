<div class="share-body">
  <div class="devise-container">
    <p class="devise-title">アカウント編集</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    
      <% if false %>
        <%= render "devise/shared/error_messages", resource: resource %>
      <% end %>

      <div class="devise-edit">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="devise-edit">
        <%= f.label :password, "変更後パスワード（変更する場合のみ入力）" %> <br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        
        <% if false %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        <% end %>
      </div>

      <div class="devise-edit">
        <%= f.label :password_confirmation, "パスワード確認用（変更する場合のみ入力）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="devise-edit">
        <%= f.label :current_password, "現在のパスワード" %> <br />
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワードを入力" %>
      </div>

      <div>
        <%= f.submit "更新", class: "btn btn-primary form-control" %>
      </div>
    <% end %>

    <%# <h3>Cancel my account</h3> %>

    <% if false %>
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    <% end %>

    <%= link_to "戻る", :back, class: "btn form-control" %>
  </div>
</div>