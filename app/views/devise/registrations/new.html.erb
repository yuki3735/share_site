<div class="share-body">
  <p class="devise-title">新しいアカウントを作成</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field">
      <div class="required">
      </div>
      <%= f.text_field :username, autofocus: true, autocomplete: "name", placeholder:"ユーザー名" %>
    </div>

    <div class="field">
      <div class="required">
      </div>
      <%= f.email_field :email, autocomplete: "email", placeholder:"メールアドレス" %>
    </div>

    <div class="field">
      <div class="required">
      </div>
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
    </div>

    <div class="field">
      <div class="required">
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード" %>
    </div>

    <div class="actions">
      <%= f.submit "新しいアカウントを作成", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path, class: "rog-1" %>

</div>