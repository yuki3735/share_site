<div class="share-body"> 
  <div class="devise-container">
    <p class="devise-title">ログイン</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="required">
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
        </div>

        <div class="field">
          <div class="required">
          </div>
          <%= f.password_field :password, autocomplete: "current-password",  placeholder:"パスワード" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to "新しいアカウントを作成", new_user_registration_path, class: "rog-1" %>
  </div>
</div>